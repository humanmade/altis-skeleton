{
    "name": "altis/skeleton",
    "description": "A base Altis project to get started with",
    "type": "project",
    "require": {
        "altis/altis": "^20.0.0"
    },
    "require-dev": {
        "altis/local-server": "^20.0.0"
    },
    "authors": [
        {
            "name": "Human Made",
            "email": "hello@humanmade.com"
        }
    ],
    "extra": {
        "installer-paths": {
            "content/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "altis": {
            "modules": {
                "local-server": {
                    "php": "8.2",
                    "ignore-paths": [
                        "node_modules",
                        ".DS_Store"
                    ]
                }
            }
        }
    },
    "config": {
        "platform": {
            "php": "8.2",
            "ext-mbstring": "8.2"
        },
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true,
            "altis/*": true
        }
    }
}
